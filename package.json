{
  "name": "@kyve/solana",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "build:binaries": "yarn build && rimraf out && pkg --output out/kyve package.json && node ./node_modules/@kyve/core/dist/src/checksum.js",
    "start": "node ./dist/src/index.js",
    "format": "prettier --write .",
    "postinstall": "patch-package"
  },
  "bin": "./dist/src/index.js",
  "pkg": {
    "scripts": "./dist/src/index.js",
    "assets": "./node_modules/@kyve/sdk/dist/proto/*",
    "targets": [
      "latest-linux-x64",
      "latest-macos-x64"
    ],
    "outputPath": "out"
  },
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {
    "@kyve/core": "1.1.0",
    "@solana/web3.js": "1.41.4"
  },
  "devDependencies": {
    "patch-package": "^6.4.7",
    "pkg": "^5.6.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4",
    "webhook-discord": "^3.7.8"
  }
}
